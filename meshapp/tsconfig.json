{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 20",

    "compilerOptions": {
        "lib": ["es2023", "DOM"],
        "module": "Node16",
        "target": "es2022",
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    }
}
